pipeline {
  environment {
    dockerImage = ''
  }
  agent any
  stages {
    stage('Clone from git') {
        git url: 'https://github.com/vinodgowda1477/flask-s3-upload.git'
    }
    stage('Building image') {
      steps{
        script {
        withCredentials([string(credentialsId: 'S3_ACCESS_KEY', variable: 'S3_ACCESS_KEY'), string(credentialsId: 'S3_SECRET_ACCESS_KEY', variable: 'S3_SECRET_ACCESS_KEY')]) {
		dockerImage = docker.build("tekion_s3_upload:$BUILD_NUMBER","--build-arg S3_ACCESS_KEY=$S3_ACCESS_KEY", "--build-arg S3_SECRET_ACCESS_KEY=$S3_SECRET_ACCESS_KEY", "--build-arg S3_BUCKET_NAME=tek-s3", "-f ${dockerfile}")
		}
        }
      }
    }
   }
  }
